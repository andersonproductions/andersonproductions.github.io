---
interface Props {
  nav_pos: "left" | "right";
  bg: "white" | "black";
}
const { nav_pos, bg } = Astro.props;
import Logo from "./Logo.astro";
---

<nav
  class={`static md:fixed w-[95vw] ml-[5vw] z-30 ${nav_pos === "left" ? "justify-end" : "justify-start"} `}
  style={`${nav_pos === "left" ? "display: flex; justify-content: flex-start;" : "display: flex; justify-content: flex-end;"}${bg === "black" ? "color: #EFF1ED;" : "color: #101211; text-shadow: 0 0 3px #ffffff;"} `}
>
  <a
    href="/"
    class="px-3 py-8 nav-logo flex justify-center"
    style="width: 100%;"
  >
    <Logo />
  </a>
</nav>
