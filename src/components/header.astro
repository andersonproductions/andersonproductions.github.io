---
const navItems = [
  { name: 'Home', href: '/' },
  { name: 'About', href: '/about' },
  { name: 'Work', href: '/work' },
  { name: 'Contact', href: '/contact' },
];
---
<header class="bg-white shadow">
  <div class="container mx-auto px-4 py-6 flex justify-between items-center">
    <h1 class="text-2xl font-bold">Anderson Productions</h1>
    <nav>
      <ul class="flex space-x-4">
        {navItems.map((item) => (
          <li><a href={item.href} class="text-gray-700 hover:text-blue-500">{item.name}</a></li>
        ))}
      </ul>
    </nav>
  </div>
</header>
