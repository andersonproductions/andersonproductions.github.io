---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
  <section>
    <h2 class="text-3xl font-semibold mb-4">Contact Us</h2>
    <form class="space-y-4">
      <input type="text" placeholder="Name" class="w-full border px-3 py-2 rounded" />
      <input type="email" placeholder="Email" class="w-full border px-3 py-2 rounded" />
      <textarea rows="4" placeholder="Message" class="w-full border px-3 py-2 rounded"></textarea>
      <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">Send</button>
    </form>
  </section>
</BaseLayout>

