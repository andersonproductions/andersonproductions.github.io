---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---
<BaseLayout>
  <Header />
  <main class="container mx-auto px-4 py-8">
    <h2 class="text-3xl font-bold mb-4">Our Work</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div class="bg-white shadow p-4">
        <img src="/images/project1.jpg" alt="Project 1" class="mb-2">
        <h3 class="text-xl font-semibold">Project Title 1</h3>
        <p class="text-gray-600">Brief description of the project.</p>
      </div>
      <div class="bg-white shadow p-4">
        <img src="/images/project2.jpg" alt="Project 2" class="mb-2">
        <h3 class="text-xl font-semibold">Project Title 2</h3>
        <p class="text-gray-600">Brief description of the project.</p>
      </div>
      <div class="bg-white shadow p-4">
        <img src="/images/project3.jpg" alt="Project 3" class="mb-2">
        <h3 class="text-xl font-semibold">Project Title 3</h3>
        <p class="text-gray-600">Brief description of the project.</p>
      </div>
    </div>
  </main>
  <Footer />
</BaseLayout>
