---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
  <section>
    <h2 class="text-3xl font-semibold mb-4">Portfolios</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- Repeat this block for each portfolio item -->
      <div class="border rounded overflow-hidden">
        <img src="/images/portfolio1.jpg" alt="Portfolio 1" class="w-full h-48 object-cover" />
        <div class="p-4">
          <h3 class="text-xl font-bold">Project Title</h3>
          <p class="text-sm text-gray-600">Brief description of the project.</p>
        </div>
      </div>
      <!-- ... -->
    </div>
  </section>
</BaseLayout>
